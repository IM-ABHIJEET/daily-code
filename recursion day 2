code for array Sorted Or Not ,using recursion
----------------------------------------------------------------------------------------------
#include<iostream>
using namespace std;
  
bool isSorted(int arr[],int size){
     if(size==0||size==1){
         return true;
     }
     
     if(arr[0]>arr[1]){
         return false;
     }
     else{
         bool remaining_part = isSorted(arr+1,size-1);
         return remaining_part;
     }
         
   } 
  int main(){
      int arr[5]={1,3,6,-8,9};
      int size=5;
      
      bool ans=isSorted(arr,size);
      
      cout<< ans << endl;
  }

